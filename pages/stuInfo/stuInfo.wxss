/* pages/stuInfo/stuInfo.wxss */
page{
  background: #e3e3e3;
  position: relative;
}
button{
  margin:0;
  padding:0;
}
.container{
  width: 700rpx;
  margin:0 auto;
  display: flex;
  flex-direction: column;
}
.contain-box{
  height: 400rpx;
  background: #fff;
  box-sizing: content-box;
  margin-top: 30rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}
/*表头*/
.box-left{
  width: 180rpx;
  height: 400rpx;
  background: #c4c4c4;
  line-height: 400rpx;
  align-items: center;
  text-align: center;
}
.box-right{
  width: 520rpx;
  height: 400rpx;
}
.box-left-items,
.box-right-items{
  height: 99rpx;
  border-bottom: 1rpx solid #FAFAFA;
  align-items: center;
  text-align: center;
  line-height: 99rpx;
}
.box-left-items:last-child,
.box-right-items:last-child{
  border: none;
}
.text-box{
  font-size: 30rpx;
  font-family: SimHei;
}
.flex-style{
  display: flex;
  flex-flow: row nowrap;
}
.info-box{
  width: 340rpx;
  height: 100rpx;
  border-right: 1rpx solid #FAFAFA;
  text-align: center;
  line-height: 100rpx;
  font-size: 28rpx;
}
.operation-box{
  width: 179rpx;
  height: 100rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
}
.btn{
  width: 120rpx;
  height: 50rpx;
  background: #00b5e9;
  border-radius: 10rpx;
  font-size: 24rpx;
  line-height: 50rpx;
  text-align: center;
  color: #fff;
}
.btn::after{
  border: none;
}
.btn:active{
  background: #03A2D1;
}
.img-box{
  width: 340rpx;
  height: 400rpx;
  border-right: 1rpx solid #FAFAFA;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
}
.img{
  width: 184rpx;
  height: 256rpx;
  background-size: cover;
}
.opt-box{
  width: 179rpx;
  height: 400rpx;
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
  align-items: center;
}
.submit-btn{
  width: 700rpx;
  height: 100rpx;
  margin: 0 auto;
  margin-top: 200rpx;
  background: #00b5e9;
  border-radius: 10rpx;
  font-size: 32rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
}
.submit-btn::after{
  border: none;
}
.submit-btn:active{
  background: #03A2D1;
}
.input-box{
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, .3);
  line-height: 200rpx;
  align-items: center;
  align-content: center;
  position: absolute;
  top: 0;
  /* animation: myAnimate .5s ease-in; */
}
.input-box-item{
  width: 100%;
  height: 200rpx;
  padding-top: 50rpx;
  background: rgba(255, 255, 255, .8);
}
.btn-box{
  width: 600rpx;
  height: 50rpx;
  margin: 0 auto;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}
.input-text{
  width: 600rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 10rpx;
  margin: 0 auto;
  margin-bottom: 50rpx;
}
