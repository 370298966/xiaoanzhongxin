/* pages/seach/search.wxss */

page {
  background: #e3e3e3;
}

.search-area {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-flow: wrap nowrap;
  justify-content: center;
  align-items: center;
}

.search-box {
  width: 700rpx;
  height: 60rpx;
  display: flex;
  flex-flow: wrap nowrap;
  justify-content: flex-start;
  align-items: center;
  background: #fff;
  border-radius: 10rpx;
}

.input-box {
  width: 550rpx;
  height: 60rpx;
  background: #fff;
  font-family: "Microsoft Yahei";
  font-size: 26rpx;
  position: relative;
}

.icon-search {
  padding: 0 10rpx;
}

.submit {
  flex-grow: 1;
  height: 60rpx;
  padding: 0;
  line-height: 60rpx;
  font-size: 26rpx;
  border-radius: 0;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.submit::after {
  border: none;
}

.clear-input {
  position: absolute;
  right: 140rpx;
  width: 30rpx;
  height: 30rpx;
  z-index: 999;
}

.list-header{
  width: 700rpx;
  height: 60rpx;
  background: #CECECE;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}
.list-header-items{
  width: 174rpx;
  height: 60rpx;
  border-right: 1rpx solid #FAFAFA;
  font-size: 34rpx;
  text-align: center;
  line-height: 60rpx;
}
.list-header-items:last-child{
  border: none;
  flex-grow: 1;
}
.disborder{
  border: none;
}
.search-result {
  width: 700rpx;
  margin: 0 auto;
}

.search-item{
  width: 700rpx;
  height: 182rpx;
  display: flex;
  flex-flow: column wrap;
  justify-content: space-between;
  border-bottom:1rpx solid #e3e3e3;
  background: #fff;
}
.search-item-name,
.search-item-status,
.search-item-details{
    width: 174rpx;
    height: 182rpx;
    border-right: 1rpx solid #e3e3e3;
    background: #fff;
    font-size: 30rpx;
    text-align: center;
    line-height: 182rpx;
    align-items: center;
}
.search-item-img{
    width: 94rpx;
    height: 120rpx;
    padding: 31rpx 40rpx;
    border-right: 1rpx solid #e3e3e3;
}
.search-item-details{
    border: none;
    flex-grow: 1;
    color: #0E87E4;
}
.search-item-details:active{
    color: #0E87E4;
}

.green{
  color: green;
}
.red{
  color: red;
}