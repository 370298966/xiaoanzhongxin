/* pages/MassPage/MassPage.wxss */
page{
  background: #e3e3e3;
}
button{
  margin:0;
  padding:0;
}
.container-box{
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.container{
  width: 660rpx;
  height: 88vh;
  padding: 20rpx 20rpx;
  margin: 0 auto;
  background: #fff;
  margin-top: 20rpx;
}
.row-item{
  width: 660rpx;
  height: 130rpx;
  border-bottom: 1rpx solid #fafafa;
}
.row-item:last-child{
  border: none;
}
.row-item:active{
  background: #D5D5D5;
}
.time-box{
  height: 60rpx;
  padding-left: 10rpx;
  font-size: 32rpx;
  text-align: left;
  line-height: 60rpx;
  font-family: Arial, Helvetica, sans-serif;
}
.content-box{
  width: 660rpx;
  height: 70rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: center;
}
.text-box{
  width: 600rpx;
  height: 70rpx;
  display: inline-flex;
  font-size: 28rpx;
  font-family: Arial, Helvetica, sans-serif;
  line-height: 70rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  color: #7E7E7E;
}
.my-iconfont{
  width: 12rpx;
  height:12rpx;
  border-style: solid;
  border-width: 4rpx 4rpx 0 0;
  border-color: #ababab;
  transform-origin: 75% 25%;
  transform: rotateZ(45deg);
}
.btn-box{
  width: 100%;
  height: 128rpx;
  flex-grow: 1;
  background: #fff;
  border-top: 1rpx solid #fafafa;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
}
.btn{
  width: 700rpx;
  height: 94rpx;
  background: #00B5E9;
  color: #fff;
}
.btn::after{
  border: none;
}
.btn:active{
  background: #03A2D1;
}