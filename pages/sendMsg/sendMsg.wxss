/* pages/sendMsg/sendMsg.wxss */

page {
  background: #e3e3e3;
  overflow: hidden;
}

.container {
  width: 100vw;
  background: #fff;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  z-index: 1;
}

.picker-box {
  width: 700rpx;
  height: 60rpx;
  margin: 20rpx auto 0;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-content: space-between;
}

.picker {
  width: 300rpx;
  height: 60rpx;
  background: #fff;
  font-size: 28rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
}

.record {
  width: 100%;
  height: 80rpx;
  margin: 0 auto;
  background: #fff;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  border-bottom: 2rpx solid #fafafa;
}

.record:active {
  background: #fafafa;
}

.input-box {
  width: 100vw;
  height: 200rpx;
  padding: 20rpx 0;
  margin: 20rpx auto 0;
  /* border: 1rpx solid #e3e3e3;
  border-radius: 10rpx; */
  margin-bottom: 20rpx;
}

textarea {
  width: 700rpx;
  max-height: 200rpx;
  margin: 0 auto;
  font-size: 28rpx;
}

.image-box {
  width: 100vw;
  box-sizing: content-box;
  display: flex;
  flex-flow: row wrap;
}

.img-item{
  width: 200rpx;
  height: 200rpx;
  margin-left: 20rpx;
}

.camera-btn {
  width: 200rpx;
  height: 200rpx;
  margin-left: 20rpx;
  background-color: #fafafa;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
}

.camera-btn image {
  width: 50rpx;
  height: 50rpx;
}

.camera-btn text {
  color: #8a8a8a;
  font-size: 28rpx;
}

.voice-box {
  width: 100vw;
  height: 100%;
  margin: 20rpx 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.voice-box-con:active {
  background-color: #fafafa;
}

.voice-box-con {
  width: 100%;
  height: 80rpx;
  margin-left: 20rpx;
  border-top: 2rpx solid #fafafa;
  border-bottom:2rpx solid #fafafa;
  display: flex;
  flex-flow: row nowrap;
  justify-content: left;
  align-items: center;
  position: relative;
}

.voice-box-con image {
  width: 32rpx;
  height: 32rpx;
  margin-left: 20rpx;
}

.voice-box-con text {
  margin-left: 20rpx;
}

.voice-box-con::after {
  display: block;
  content: "";
  width: 12rpx;
  height: 12rpx;
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  border-style: solid;
  border-width: 4rpx 4rpx 0 0;
  border-color: #ababab;
  transform-origin: 75% 25%;
  transform: rotateZ(135deg);
}

/* .icon-image {
  width: 60rpx;
  height: 60rpx;
} */

.btn-box {
  width: 100vw;
  height: 128rpx;
  position: fixed;
  bottom: 0;
  left: 0;
}

.btn {
  width: 700rpx;
  height: 94rpx;
  margin: 17rpx auto;
  background: #00b5e9;
  border-radius: 10rpx;
  color: #fff;
  line-height: 94rpx;
  text-align: center;
  font-size: 34rpx;
}

button::after {
  border: none;
}

.btn:active {
  background: #03a2d1;
}

.speak-box {
  position: fixed;
  bottom:20%;
  left: 0;
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  align-content: center;
  z-index: 999;
}

.speak-style {
  height: 240rpx;
  width: 240rpx;
  border-radius: 50%;
  background: #00b5e9;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-content: center;
  align-items: center;
}
.speak-style:active{
  background-color: #03a2d1;
}
.speak-style{
  color: #fff;
}
.speak-items {
  width: 100rpx;
  height: 100rpx;
}
