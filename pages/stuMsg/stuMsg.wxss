/* pages/stuMsg/stuMsg.wxss */
page{
  background: #e3e3e3;
  overflow: hidden;
}
.container{
  width: 700rpx;
  height: 100vh;
  margin: 0 auto;
}
.search-area{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-flow: wrap nowrap;
  justify-content: center;
  align-items: center;
}
.search-box{
  width: 700rpx;
  height: 60rpx;
  display: flex;
  flex-flow: wrap nowrap;
  justify-content: center;
  align-items: center;
}
.input-box{
  width: 600rpx;
  height: 60rpx;
  padding: 0 50rpx;
  border-radius: 26rpx;
  background: #F3F3F3;
  font-family: "Microsoft Yahei";
  font-size: 26rpx;
}
.placeholder-style{
  margin-left: 274rpx;
}
/*列表区域*/
/* .list-container{
  width: 100%;
  height: 100%;
} */
.list-box{
  width: 700rpx;
  height: 89vh;
  background: #fff;
  margin:0 auto;
  overflow: hidden;
}
.list-header{
  width: 700rpx;
  height: 60rpx;
  background: #CECECE;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}
.list-header-items{
  width: 174rpx;
  height: 60rpx;
  border-right: 1rpx solid #FAFAFA;
  font-size: 34rpx;
  text-align: center;
  line-height: 60rpx;
}
.list-header-items:last-child{
  border: none;
  flex-grow: 1;
}
.disborder{
  border: none;
}
/*表格内容*/
.list-con{
  width: 700rpx;
  height:100vh;
  display: flex;
  flex-flow: column wrap;
  justify-content: space-between;
  background: #fff;
}

.msg-item{
  width: 700rpx;
  height: 182rpx;
  display: flex;
  flex-flow: column wrap;
  justify-content: space-between;
  border-bottom:1rpx solid #e3e3e3;
}
.msg-item-name,
.msg-item-status,
.msg-item-details{
    width: 174rpx;
    height: 182rpx;
    border-right: 1rpx solid #e3e3e3;
    background: #fff;
    font-size: 30rpx;
    text-align: center;
    line-height: 182rpx;
    align-items: center;
}
.msg-item-img{
    width: 94rpx;
    height: 120rpx;
    padding: 31rpx 40rpx;
    border-right: 1rpx solid #e3e3e3;
}
.msg-item-details{
    border: none;
    flex-grow: 1;
    color: #0E87E4;
}
.msg-item-details:active{
    color: #0E87E4;
}
